listen:
  hostname: '0.0.0.0'
  port: 9000

webserver:
  https: false
  hostname: 'peertube.{{ peertube_domain }}'
  port: 9000

trust_proxy:
  - 'loopback'

database:
  hostname: 'postgresql'
  port: 5432
  ssl: false
  suffix: ''
  username: 'peertube'
  password: 'peertube'
  pool:
    max: 5

redis:
  hostname: 'redis'
  port: 6379
  auth: null
  db: 0

smtp:
  # smtp or sendmail
  transport: smtp
  hostname: mail.{{ peertube_domain }}
  port: 587 # If you use StartTLS: 587
  username: peertube@{{ peertube_domain }}
  password: Sekrit
  tls: false # If you use StartTLS: false
  disable_starttls: false
  from_address: 'peertube@{{ peertube_domain }}'

live:
  enabled: true
  max_duration: -1
  max_instance_lives: -1
  max_user_lives: -1
  allow_replay: true

  rtmp:
    port: 1935

  transcoding:
    enabled: true
    threads: 2

    resolutions:
      240p: false
      360p: false
      480p: false
      720p: true
      1080p: false
      2160p: false
